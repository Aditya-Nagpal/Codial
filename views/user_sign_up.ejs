<link rel="stylesheet" type="text/css" href="/css/forms.css">
<script src="https://kit.fontawesome.com/50d3f01cf7.js" crossorigin="anonymous"></script>

<div>
    <h1 class="page-heading">Sign Up</h1>
</div>

<div class="form-container">
    <form action="/users/create" method="POST">
        <label for="name" class="form-label"><b>Name:</b></label>
        <input type="text" class="form-text-input" name="name" placeholder="Your Name" required>
        <label for="email" class="form-label"><b>Email:</b></label>
        <input type="email" class="form-text-input" name="email" placeholder="Your Email" required>
        <label for="password" class="form-label"><b>Password:</b></label>
        <input type="password" class="form-text-input" name="password" placeholder="Password" required>
        <label for="confirm_password" class="form-label"><b>Confirm Password:</b></label>
        <input type="password" class="form-text-input" name="confirm_password" placeholder="Confirm Password" required>
        <p class="google-button"><a href="/users/auth/google"><i class="fa-brands fa-google"></i>&emsp;google Sign In/Sign Up</a></p>
        <div class="form-submit-button">
            <input type="submit" class="pointer" value="Sign Up">
        </div>
    </form>
</div>