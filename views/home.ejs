<link rel="stylesheet" type="text/css" href="/css/home.css">
<h1 style="font-family: monospace;">
    codial / <%= title %>
</h1>

<div id="home-container">
    <section id="feed-posts">
        <h3>Posts</h3>
        <% if(locals.user) {%>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Post here..." required></textarea>
                <input type="submit" value="Post">
            </form>
        <% } %>
        <div id="posts-list-container">
            <ul>
                <% for(let post of posts){%>
                    <%- include('_post', {post: post}) %>
                <%} %>
            </ul>
        </div>
    </section>

    <section id="user-friends">
        <% if(locals.user){ %> 
            <div>
                <h4>Friends</h4>
                <% for(let friendship of locals.user.friendships){ %> 
                    <!-- <p>
                        <a href="/users/profile/<%= %>"><%= friendship %></a>
                    </p> -->
                <% } %>
            </div>
        <% } %>
        <div>
            <h4>You may want to add these users</h4>
            <% for(let user of all_users){ %>
                <p>
                    <a href="/users/profile/<%= user.id %>"><%= user.name %></a>
                </p>
            <% } %>
        </div>
    </section>
</div>
<script src="/js/home_post_comments.js"></script>
<script src="/js/home_posts.js"></script>
<script src="/js/toggle_likes.js"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self=this;
        let toggleLike=new ToggleLike(self);
    });
</script>